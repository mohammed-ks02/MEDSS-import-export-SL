{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    // --- Crucial for JSX and JSON Integration ---
    "jsx": "preserve",
    "jsxImportSource": "react",
    
    // Allows importing.json files directly, fixing the "Cannot find module" errors.
    "resolveJsonModule": true, 
    
    "esModuleInterop": true,

    // --- Module Resolution and Project Structure ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // --- General TypeScript Settings ---
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [".astro/types.d.ts", "src/**/*"],
  // Prevents TypeScript from checking the built output folder.
  "exclude": ["dist", "docs", "backup_untracked", "node_modules"] 
}
