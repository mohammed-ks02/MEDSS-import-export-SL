---
// Hero section component
import { withBase } from '../../utils/basePath';
import TranslatableText from '../TranslatableText';
---

<section class="relative section">
  <div class="container">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Content -->
      <div class="text-center lg:text-left">
        <TranslatableText 
          client:load
          translationKey="hero_title" 
          tag="h1"
          className="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6"
          fallback="Premium Spanish Produce for Global Markets"
        />
        <TranslatableText 
          client:load
          translationKey="hero_desc"
          tag="p"
          className="text-xl text-gray-600 mb-8 max-w-lg"
          fallback="Your premier partner for Spanish fresh produce export. From our facilities in Sevilla and Barcelona, MED SS ensures quality, reliability, and seamless delivery worldwide."
        />
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href={withBase('/products')} class="btn-primary text-center">
            <TranslatableText
              client:load
              translationKey="hero_btn"
              tag="span"
              fallback="View Our Products"
            />
          </a>
        </div>
        
        <!-- Key Stats -->
        <div class="grid grid-cols-3 gap-4 mt-12 text-center">
          <div>
            <div class="text-2xl font-bold text-green-600">50+</div>
            <TranslatableText
              client:load
              translationKey="hero_countries"
              tag="div"
              className="text-sm text-gray-600"
              fallback="Countries Served"
            />
          </div>
          <div>
            <div class="text-2xl font-bold text-green-600">+3</div>
            <TranslatableText
              client:load
              translationKey="hero_experience"
              tag="div"
              className="text-sm text-gray-600"
              fallback="Years Experience"
            />
          </div>
          <div>
            <div class="text-2xl font-bold text-green-600">99%</div>
            <TranslatableText
              client:load
              translationKey="hero_ontime"
              tag="div"
              className="text-sm text-gray-600"
              fallback="On-Time Delivery"
            />
          </div>
        </div>
      </div>

      <!-- Right Column - Image Collage -->
      <div class="relative">
        <img src={withBase('/basckets_of_fruits_vegetables.webp')} alt="Beautiful baskets filled with a variety of fresh fruits and vegetables, showcasing the diverse and high-quality produce available for import/export through MED SS IMPORT & EXPORT." class="rounded-2xl shadow-xl object-cover h-96 w-full" />
      </div>
    </div>
  </div>
</section>

<style>
  .icon-bg {
    background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
    border-radius: 9999px;
    padding: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    margin: 0.25rem;
  }
  .icon-jump {
    display: inline-block;
    animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
  }
  @keyframes icon-jump {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    60% { filter: brightness(1.1); }
    100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
  }
</style>
