---
// Featured Products section
import { withBase } from '../../utils/basePath';
import TranslatableText from '../TranslatableText';
---

<section class="section bg-white">
  <div class="container">
    <div class="text-center mb-12">
      <TranslatableText
        client:load
        translationKey="featured_title"
        tag="h2"
        className="text-3xl lg:text-4xl font-bold text-gray-900 mb-4"
        fallback="Premium Products for Global Trade"
      />
      <TranslatableText
        client:load
        translationKey="featured_desc"
        tag="p"
        className="text-xl text-gray-600 max-w-3xl mx-auto"
        fallback="Sourced and delivered by MED SS IMPORT & EXPORT â€” your trusted partner for Spanish fresh produce worldwide."
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <!-- Logistics/Trade Icon Card 1 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img 
          src={withBase('/Container Transport.webp')} 
          alt="Container Transport"
          class="h-48 w-full object-cover transition-opacity duration-300" 
          loading="lazy"
          decoding="async"
        />
        <div class="p-6 text-center">
          <TranslatableText
            client:load
            translationKey="featured_card1_title"
            tag="h3"
            className="text-xl font-bold text-gray-900"
            fallback="Container Transport"
          />
        </div>
      </div>
      <!-- Logistics/Trade Icon Card 2 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img 
          src={withBase('/Fresh Produce Logistics.webp')} 
          alt="Fresh Produce Logistics"
          class="h-48 w-full object-cover transition-opacity duration-300" 
          loading="lazy"
          decoding="async"
        />
        <div class="p-6 text-center">
          <TranslatableText
            client:load
            translationKey="featured_card2_title"
            tag="h3"
            className="text-xl font-bold text-gray-900"
            fallback="Fresh Produce Logistics"
          />
        </div>
      </div>
      <!-- Logistics/Trade Icon Card 3 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img 
          src={withBase('/Cold Chain Solutions.webp')} 
          alt="Cold Chain Solutions"
          class="h-48 w-full object-cover transition-opacity duration-300" 
          loading="lazy"
          decoding="async"
        />
        <div class="p-6 text-center">
          <TranslatableText
            client:load
            translationKey="featured_card3_title"
            tag="h3"
            className="text-xl font-bold text-gray-900"
            fallback="Cold Chain Solutions"
          />
        </div>
      </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <TranslatableText
          client:load
          translationKey="why_choose.title"
          tag="h3"
          className="text-3xl font-bold text-gray-900 mb-4"
          fallback="Why Choose MED SS IMPORT & EXPORT?"
        />
        <TranslatableText
          client:load
          translationKey="why_choose.subtitle"
          tag="p"
          className="text-lg text-gray-600 max-w-2xl mx-auto"
          fallback="Your trusted partner for premium Spanish produce with global reach"
        />
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <!-- Quality Excellence -->
        <div class="text-center">
          <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <TranslatableText
            client:load
            translationKey="why_choose.premium_quality"
            tag="h4"
            className="text-xl font-bold text-gray-900 mb-2"
            fallback="Premium Quality"
          />
          <TranslatableText
            client:load
            translationKey="why_choose.premium_quality_desc"
            tag="p"
            className="text-gray-600"
            fallback="Rigorous quality control ensures only the finest Spanish produce reaches global markets"
          />
        </div>
        
        <!-- Global Logistics -->
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
            </svg>
          </div>
          <TranslatableText
            client:load
            translationKey="why_choose.global_reach"
            tag="h4"
            className="text-xl font-bold text-gray-900 mb-2"
            fallback="Global Reach"
          />
          <TranslatableText
            client:load
            translationKey="why_choose.global_reach_desc"
            tag="p"
            className="text-gray-600"
            fallback="Worldwide distribution network connecting Spanish excellence with international markets"
          />
        </div>
        
        <!-- Fresh Guarantee -->
        <div class="text-center">
          <div class="bg-orange-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <TranslatableText
            client:load
            translationKey="why_choose.fresh_delivery"
            tag="h4"
            className="text-xl font-bold text-gray-900 mb-2"
            fallback="Fresh Delivery"
          />
          <TranslatableText
            client:load
            translationKey="why_choose.fresh_delivery_desc"
            tag="p"
            className="text-gray-600"
            fallback="Cold chain logistics guarantee maximum freshness from farm to destination"
          />
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href={withBase('/products')} class="btn-primary">
        <TranslatableText
          client:load
          translationKey="featured_btn"
          tag="span"
          fallback="View All Products"
        />
      </a>
    </div>
  </div>
</section>

<style>
  .icon-bg {
    background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
    border-radius: 9999px;
    padding: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    margin: 0.25rem;
  }
  .icon-jump {
    display: inline-block;
    animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
  }
  @keyframes icon-jump {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    60% { filter: brightness(1.1); }
    100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
  }
  .icon-float {
    display: inline-block;
    animation: icon-float 2.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.10));
  }
  @keyframes icon-float {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    100% { transform: translateY(-10px) scale(1.04); filter: brightness(1.1); }
  }
</style>
