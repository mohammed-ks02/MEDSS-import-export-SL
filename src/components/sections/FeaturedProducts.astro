---
// Featured Products section
import { withBase } from '../../utils/basePath';
---

<section class="section bg-white">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4" data-i18n="featured_title">
        Premium Products for Global Trade
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-i18n="featured_desc"> Sourced and delivered by <span class='font-bold' data-i18n="brand">Global road</span> â€” your trusted partner for import/export logistics and fresh produce worldwide.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <!-- Logistics/Trade Icon Card 1 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 flex items-center justify-center bg-gradient-to-br from-blue-100 to-blue-200">
          <div class="icon-bg">
            <svg class="w-14 h-14 icon-float text-blue-700" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <rect x="6" y="16" width="28" height="16" rx="3" fill="#3b82f6"/>
              <rect x="34" y="20" width="8" height="12" rx="2" fill="#60a5fa"/>
              <circle cx="14" cy="36" r="4" fill="#1e40af"/>
              <circle cx="38" cy="36" r="4" fill="#1e40af"/>
            </svg>
          </div>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card1_title">Container Transport</h3>
        </div>
      </div>
      <!-- Logistics/Trade Icon Card 2 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 flex items-center justify-center bg-gradient-to-br from-green-100 to-green-200">
          <div class="icon-bg">
            <svg class="w-14 h-14 icon-float text-green-700" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <rect x="10" y="18" width="28" height="12" rx="3" fill="#22c55e"/>
              <path d="M12 30 L36 30" stroke="#166534" stroke-width="2"/>
              <circle cx="16" cy="36" r="4" fill="#166534"/>
              <circle cx="32" cy="36" r="4" fill="#166534"/>
            </svg>
          </div>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card2_title">Fresh Produce Logistics</h3>
        </div>
      </div>
      <!-- Logistics/Trade Icon Card 3 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 flex items-center justify-center bg-gradient-to-br from-yellow-100 to-yellow-200">
          <div class="icon-bg">
            <svg class="w-14 h-14 icon-float text-yellow-700" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <rect x="8" y="20" width="32" height="10" rx="3" fill="#facc15"/>
              <rect x="36" y="24" width="6" height="6" rx="1" fill="#fde047"/>
              <circle cx="16" cy="36" r="4" fill="#ca8a04"/>
              <circle cx="32" cy="36" r="4" fill="#ca8a04"/>
            </svg>
          </div>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card3_title">Cold Chain Solutions</h3>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
      <!-- Product 1 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img src={withBase('/398a9df5-c947-4f43-b400-c546c2d58bf7.jpg')} alt="A rustic display of fresh produce, including red bell peppers, tomatoes, eggplants, green vegetables, and squashes or gourds. Showcasing fresh produce for local markets and variety." class="h-48 w-full object-cover rounded-t-2xl" />
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card4_title">Fresh Produce Variety</h3>
        </div>
      </div>
      <!-- Product 2 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img src={withBase('/0fce3e83-de51-4e3a-979e-28bc93fd57f8.jpg')} alt="A close-up of fresh fruits and vegetables in boxes, with price tags visible. Includes apples, pumpkin, radishes, and zucchini. Highlights retail-ready produce and quality." class="h-48 w-full object-cover rounded-t-2xl" />
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card5_title">Retail-Ready Produce</h3>
        </div>
      </div>
      <!-- Product 3 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img src={withBase('/b7b29ec1-b35c-4b43-b57d-58b2e2b7467f.jpg')} alt="A person in a white lab coat and hairnet inspecting produce on a conveyor belt in a food processing facility. Demonstrates quality control and food safety standards." class="h-48 w-full object-cover rounded-t-2xl" />
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card6_title">Quality Control</h3>
        </div>
      </div>
      <!-- Product 4 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <img src={withBase('/dbf5403f-bf97-46c7-8ed5-7a8c0e089ec0.jpg')} alt="A person with avocados and a tablet in a delivery van. Shows loading/unloading, inventory management, and delivery of fresh produce." class="h-48 w-full object-cover rounded-t-2xl" />
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card7_title">Inventory & Delivery</h3>
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href={withBase('/products')} class="btn-primary" data-i18n="featured_btn">
        View All Products
      </a>
    </div>
  </div>
</section>

<style>
  .icon-bg {
    background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
    border-radius: 9999px;
    padding: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    margin: 0.25rem;
  }
  .icon-jump {
    display: inline-block;
    animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
  }
  @keyframes icon-jump {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    60% { filter: brightness(1.1); }
    100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
  }
  .icon-float {
    display: inline-block;
    animation: icon-float 2.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.10));
  }
  @keyframes icon-float {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    100% { transform: translateY(-10px) scale(1.04); filter: brightness(1.1); }
  }
</style>
