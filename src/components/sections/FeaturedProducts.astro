---
// Featured Products section
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Premium Products from Around the World
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        We source the finest fruits and vegetables from trusted growers worldwide, ensuring consistent quality and supply for your business needs.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Product Category 1 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 bg-gradient-to-br from-red-100 to-red-200 flex items-center justify-center">
          <span class="text-6xl">🍎</span>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900">Premium Apples</h3>
        </div>
      </div>

      <!-- Product Category 2 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
          <span class="text-6xl">🥑</span>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900">Hass Avocados</h3>
        </div>
      </div>

      <!-- Product Category 3 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 bg-gradient-to-br from-orange-100 to-orange-200 flex items-center justify-center">
          <span class="text-6xl">🍊</span>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900">Citrus Fruits</h3>
        </div>
      </div>

      <!-- Product Category 4 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 bg-gradient-to-br from-purple-100 to-purple-200 flex items-center justify-center">
          <span class="text-6xl">🍇</span>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900">Table Grapes</h3>
        </div>
      </div>

      <!-- Product Category 5 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
          <span class="text-6xl">🥬</span>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900">Leafy Greens</h3>
        </div>
      </div>

      <!-- Product Category 6 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 bg-gradient-to-br from-yellow-100 to-yellow-200 flex items-center justify-center">
          <span class="text-6xl">🥭</span>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900">Tropical Fruits</h3>
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href="/products" class="btn-primary">
        View All Products
      </a>
    </div>
  </div>
</section>
