---
// Featured Products section
import { withBase } from '../../utils/basePath';
---

<section class="section bg-white">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4" data-i18n="featured_title">
        Premium Products for Global Trade
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto" data-i18n="featured_desc">Sourced and delivered by MED SS IMPORT & EXPORT â€” your trusted partner for Spanish fresh produce worldwide.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <!-- Logistics/Trade Icon Card 1 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 flex items-center justify-center bg-gradient-to-br from-blue-100 to-blue-200">
          <div class="icon-bg">
            <svg class="w-14 h-14 icon-float text-blue-700" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <rect x="6" y="16" width="28" height="16" rx="3" fill="#3b82f6"/>
              <rect x="34" y="20" width="8" height="12" rx="2" fill="#60a5fa"/>
              <circle cx="14" cy="36" r="4" fill="#1e40af"/>
              <circle cx="38" cy="36" r="4" fill="#1e40af"/>
            </svg>
          </div>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card1_title">Container Transport</h3>
        </div>
      </div>
      <!-- Logistics/Trade Icon Card 2 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 flex items-center justify-center bg-gradient-to-br from-green-100 to-green-200">
          <div class="icon-bg">
            <svg class="w-14 h-14 icon-float text-green-700" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <rect x="10" y="18" width="28" height="12" rx="3" fill="#22c55e"/>
              <path d="M12 30 L36 30" stroke="#166534" stroke-width="2"/>
              <circle cx="16" cy="36" r="4" fill="#166534"/>
              <circle cx="32" cy="36" r="4" fill="#166534"/>
            </svg>
          </div>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card2_title">Fresh Produce Logistics</h3>
        </div>
      </div>
      <!-- Logistics/Trade Icon Card 3 -->
      <div class="card group hover:shadow-xl transition-shadow duration-300">
        <div class="h-48 flex items-center justify-center bg-gradient-to-br from-yellow-100 to-yellow-200">
          <div class="icon-bg">
            <svg class="w-14 h-14 icon-float text-yellow-700" fill="none" viewBox="0 0 48 48" stroke="currentColor">
              <rect x="8" y="20" width="32" height="10" rx="3" fill="#facc15"/>
              <rect x="36" y="24" width="6" height="6" rx="1" fill="#fde047"/>
              <circle cx="16" cy="36" r="4" fill="#ca8a04"/>
              <circle cx="32" cy="36" r="4" fill="#ca8a04"/>
            </svg>
          </div>
        </div>
        <div class="p-6 text-center">
          <h3 class="text-xl font-bold text-gray-900" data-i18n="featured_card3_title">Cold Chain Solutions</h3>
        </div>
      </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="mb-16">
      <div class="text-center mb-12">
        <h3 class="text-3xl font-bold text-gray-900 mb-4" data-i18n="why_choose.title">Why Choose MED SS IMPORT & EXPORT?</h3>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto" data-i18n="why_choose.subtitle">Your trusted partner for premium Spanish produce with global reach</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <!-- Quality Excellence -->
        <div class="text-center">
          <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2" data-i18n="why_choose.premium_quality">Premium Quality</h4>
          <p class="text-gray-600" data-i18n="why_choose.premium_quality_desc">Rigorous quality control ensures only the finest Spanish produce reaches global markets</p>
        </div>
        
        <!-- Global Logistics -->
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2" data-i18n="why_choose.global_reach">Global Reach</h4>
          <p class="text-gray-600" data-i18n="why_choose.global_reach_desc">Worldwide distribution network connecting Spanish excellence with international markets</p>
        </div>
        
        <!-- Fresh Guarantee -->
        <div class="text-center">
          <div class="bg-orange-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h4 class="text-xl font-bold text-gray-900 mb-2" data-i18n="why_choose.fresh_delivery">Fresh Delivery</h4>
          <p class="text-gray-600" data-i18n="why_choose.fresh_delivery_desc">Cold chain logistics guarantee maximum freshness from farm to destination</p>
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href={withBase('/products')} class="btn-primary" data-i18n="featured_btn">
        View All Products
      </a>
    </div>
  </div>
</section>

<style>
  .icon-bg {
    background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
    border-radius: 9999px;
    padding: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    margin: 0.25rem;
  }
  .icon-jump {
    display: inline-block;
    animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
  }
  @keyframes icon-jump {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    60% { filter: brightness(1.1); }
    100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
  }
  .icon-float {
    display: inline-block;
    animation: icon-float 2.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
    transition: filter 0.2s, transform 0.2s;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.10));
  }
  @keyframes icon-float {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    100% { transform: translateY(-10px) scale(1.04); filter: brightness(1.1); }
  }
</style>
