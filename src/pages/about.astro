---
import MainLayout from '../layouts/MainLayout.astro';
import { withBase } from '../utils/basePath';
import TranslatableText from '../components/TranslatableText';
---

<MainLayout 
  title="About Us - MED SS IMPORT & EXPORT SL"
  description="Learn about MED SS IMPORT & EXPORT's specialization in fresh produce export, our mission, values, and commitment to connecting agricultural excellence with global markets."
>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-green-50 to-green-100">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <TranslatableText
          client:load
          translationKey="about_title"
          tag="h1"
          className="text-4xl lg:text-5xl font-bold text-gray-900 mb-6"
          fallback="Our Story: Spanish Excellence in Global Trade"
        />
        <TranslatableText
          client:load
          translationKey="about_desc"
          tag="p"
          className="text-xl text-gray-600 leading-relaxed"
          fallback="MED SS IMPORT & EXPORT specializes in connecting Spanish agricultural excellence with global markets. Based in Sevilla with operations in Barcelona's Mercabarna, we are committed to quality and reliability."
        />
      </div>
    </div>
  </section>

  <!-- Mission & Values -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <TranslatableText
            client:load
            translationKey="about_mission_title"
            tag="h2"
            className="text-3xl font-bold text-gray-900 mb-6"
            fallback="Our Mission"
          />
          <TranslatableText
            client:load
            translationKey="about_mission_1"
            tag="p"
            className="text-lg text-gray-600 mb-6"
            fallback="To export Spain's finest fresh produce to businesses worldwide that demand exceptional quality, creating sustainable value for Spanish growers and international partners."
          />
          <TranslatableText
            client:load
            translationKey="about_mission_2"
            tag="p"
            className="text-lg text-gray-600"
            fallback="We believe Spanish fresh produce represents quality and tradition that should be accessible to businesses worldwide."
          />
        </div>
        <div class="bg-green-50 rounded-xl p-8">
          <TranslatableText
            client:load
            translationKey="about_values_title"
            tag="h3"
            className="text-2xl font-bold text-green-800 mb-4"
            fallback="Our Core Values"
          />
          <ul class="space-y-3">
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <TranslatableText
                  client:load
                  translationKey="about_value_quality"
                  tag="span"
                  className="font-semibold text-gray-900"
                  fallback="Quality First:"
                />
                <TranslatableText
                  client:load
                  translationKey="about_value_quality_desc"
                  tag="span"
                  className="text-gray-600"
                  fallback=" Never compromising on the standards that define exceptional produce"
                />
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <TranslatableText
                  client:load
                  translationKey="about_value_sustain"
                  tag="span"
                  className="font-semibold text-gray-900"
                  fallback="Sustainability:"
                />
                <TranslatableText
                  client:load
                  translationKey="about_value_sustain_desc"
                  tag="span"
                  className="text-gray-600"
                  fallback=" Supporting eco-friendly farming and responsible trade practices"
                />
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <TranslatableText
                  client:load
                  translationKey="about_value_partner"
                  tag="span"
                  className="font-semibold text-gray-900"
                  fallback="Partnership:"
                />
                <TranslatableText
                  client:load
                  translationKey="about_value_partner_desc"
                  tag="span"
                  className="text-gray-600"
                  fallback=" Building long-term relationships based on trust and mutual success"
                />
              </div>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <TranslatableText
                  client:load
                  translationKey="about_value_innov"
                  tag="span"
                  className="font-semibold text-gray-900"
                  fallback="Innovation:"
                />
                <TranslatableText
                  client:load
                  translationKey="about_value_innov_desc"
                  tag="span"
                  className="text-gray-600"
                  fallback=" Continuously improving our processes and embracing new technologies"
                />
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Quality & Service Section -->
  <section class="section bg-gray-50">
    <div class="container space-y-16">
      <div>
        <TranslatableText
          client:load
          translationKey="quality_service"
          tag="h2"
          className="text-3xl font-bold text-blue-800 mb-8 text-center"
          fallback="Quality & Services"
        />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img 
              src={withBase('/Quality control.webp')} 
              alt="Quality Control"
              class="h-64 w-full object-cover transition-opacity duration-300" 
              loading="lazy"
              decoding="async"
            />
            <div class="p-6 text-center">
              <TranslatableText
                client:load
                translationKey="quality_control_title"
                tag="h4"
                className="text-xl font-bold text-gray-900"
                fallback="Quality Control"
              />
            </div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img 
              src={withBase('/Professional delivery.webp')} 
              alt="Professional Delivery"
              class="h-64 w-full object-cover transition-opacity duration-300" 
              loading="lazy"
              decoding="async"
            />
            <div class="p-6 text-center">
              <TranslatableText
                client:load
                translationKey="professional_delivery_title"
                tag="h4"
                className="text-xl font-bold text-gray-900"
                fallback="Professional Delivery"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Information Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <TranslatableText
            client:load
            translationKey="company_info_title"
            tag="h2"
            className="text-3xl font-bold text-gray-900 mb-4"
            fallback="Company Information"
          />
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg p-8 border border-gray-100">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Company Name -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="company_name_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Company"
                />
                <TranslatableText
                  client:load
                  translationKey="company_name"
                  tag="p"
                  className="text-lg font-semibold text-gray-900"
                  fallback="MED SS IMPORT & EXPORT"
                />
              </div>
            </div>

            <!-- Tax ID -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="tax_id_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Tax ID"
                />
                <TranslatableText
                  client:load
                  translationKey="tax_id"
                  tag="p"
                  className="text-lg font-semibold text-gray-900"
                  fallback="NIF / B06934541"
                />
              </div>
            </div>

            <!-- Fiscal Address -->
            <div class="flex items-start space-x-3">
              <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="fiscal_address_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Fiscal Address"
                />
                <TranslatableText
                  client:load
                  translationKey="contact_fiscal_address"
                  tag="p"
                  className="text-lg font-semibold text-gray-900"
                  fallback="CALLE PUERTO 17 B SEVILLA 41020"
                />
              </div>
            </div>

            <!-- Warehouse Address -->
            <div class="flex items-start space-x-3">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="warehouse_address_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Warehouse Address"
                />
                <TranslatableText
                  client:load
                  translationKey="contact_hq_address"
                  tag="p"
                  className="text-lg font-semibold text-gray-900"
                  fallback="LONGITUDINAL 5, No. 83 MERCABARNA 08040 BARCELONA"
                />
              </div>
            </div>

            <!-- Bank Account -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="bank_account_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Bank Account"
                />
                <TranslatableText
                  client:load
                  translationKey="bank_account"
                  tag="p"
                  className="text-lg font-semibold text-gray-900 font-mono"
                  fallback="ES7600810215250001949495"
                />
              </div>
            </div>

            <!-- SWIFT/BIC -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m4 0H3a1 1 0 00-1 1v14a1 1 0 001 1h18a1 1 0 001-1V5a1 1 0 00-1-1zM9 12h6m-6 4h6"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="swift_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="SWIFT/BIC"
                />
                <TranslatableText
                  client:load
                  translationKey="swift_code"
                  tag="p"
                  className="text-lg font-semibold text-gray-900 font-mono"
                  fallback="BSABESBBXXX"
                />
              </div>
            </div>

            <!-- Company Phone -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="company_phone_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Company Phone"
                />
                <p class="text-lg font-semibold text-gray-900">+34 667 91 80 18</p>
              </div>
            </div>

            <!-- Commercial Phone -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="commercial_phone_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Commercial Phone"
                />
                <p class="text-lg font-semibold text-gray-900">+34 624 18 32 01</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-center space-x-3 md:col-span-2">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <TranslatableText
                  client:load
                  translationKey="email_label"
                  tag="p"
                  className="text-sm font-medium text-gray-500"
                  fallback="Email"
                />
                <p class="text-lg font-semibold text-gray-900">info.medssimport@gmail.com</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="divider"></section>

</MainLayout>

<style>
.fish-jump {
  display: inline-block;
  animation: fish-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
}
@keyframes fish-jump {
  0% { transform: translateY(0) scale(1); filter: brightness(1); }
  60% { filter: brightness(1.1); }
  100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
}
.icon-bg {
  background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
  border-radius: 9999px;
  padding: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  margin: 0.25rem;
}
.icon-jump {
  display: inline-block;
  animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
  transition: filter 0.2s, transform 0.2s;
  filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
}
@keyframes icon-jump {
  0% { transform: translateY(0) scale(1); filter: brightness(1); }
  60% { filter: brightness(1.1); }
  100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
}
</style>
