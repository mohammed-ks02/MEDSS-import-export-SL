---
import MainLayout from '../layouts/MainLayout.astro';
import TranslatableText from '../components/TranslatableText';
---

<MainLayout 
  title="Contact Us - MED SS IMPORT & EXPORT SL"
  description="Get in touch with MED SS IMPORT & EXPORT for produce information, logistics solutions, and partnership opportunities. We're here to support your global trade needs."
>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-green-50 to-green-100">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <TranslatableText
          client:load
          translationKey="contact_title"
          tag="h1"
          className="text-4xl lg:text-5xl font-bold text-gray-900 mb-6"
          fallback="Get In Touch With Us"
        />
        <TranslatableText
          client:load
          translationKey="contact_intro"
          tag="p"
          className="text-xl text-gray-600 leading-relaxed"
          fallback="Ready to discuss your Spanish produce sourcing needs? Our team of experts is here to provide solutions that meet your quality, volume, and delivery requirements."
        />
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="section bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <TranslatableText
            client:load
            translationKey="contact_info_title"
            tag="h2"
            className="text-3xl font-bold text-gray-900 mb-4"
            fallback="Contact Information"
          />
          <TranslatableText
            client:load
            translationKey="contact_info_desc"
            tag="p"
            className="text-xl text-gray-600"
            fallback="Our team is available to discuss your fresh produce needs, answer questions about our logistics, and provide expert guidance on Spanish agricultural products."
          />
        </div>

        <!-- Contact Methods -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <TranslatableText
              client:load
              translationKey="contact_phone_title"
              tag="h3"
              className="font-semibold text-lg text-gray-900 mb-2"
              fallback="Phone"
            />
            <div class="space-y-1">
              <p class="text-gray-600 font-medium">
                Company Phone<br>
                +34 667 91 80 18
              </p>
              <p class="text-gray-600 font-medium">
                Commercial Phone<br>
                +34 624 18 32 01
              </p>
            </div>
            <TranslatableText
              client:load
              translationKey="contact_phone_hours"
              tag="p"
              className="text-sm text-gray-500"
              fallback="Monday - Friday: 8:00 AM - 6:00 PM"
            />
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <TranslatableText
              client:load
              translationKey="contact_email_title"
              tag="h3"
              className="font-semibold text-lg text-gray-900 mb-2"
              fallback="Email"
            />
            <TranslatableText
              client:load
              translationKey="contact_email"
              tag="p"
              className="text-gray-600"
              fallback="info.medssimport@gmail.com"
            />
            <TranslatableText
              client:load
              translationKey="contact_email_response"
              tag="p"
              className="text-sm text-gray-500"
              fallback="We respond within 24 hours"
            />
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <TranslatableText
              client:load
              translationKey="contact_warehouse_title"
              tag="h3"
              className="font-semibold text-lg text-gray-900 mb-2"
              fallback="Warehouse"
            />
            <TranslatableText
              client:load
              translationKey="contact_hq_address"
              tag="p"
              className="text-gray-600 text-sm"
              fallback="LONGITUDINAL 5, No. 83 MERCABARNA 08040 BARCELONA"
            />
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <TranslatableText
              client:load
              translationKey="contact_fiscal_title"
              tag="h3"
              className="font-semibold text-lg text-gray-900 mb-2"
              fallback="Fiscal Address"
            />
            <TranslatableText
              client:load
              translationKey="contact_fiscal_address"
              tag="p"
              className="text-gray-600 text-sm"
              fallback="CALLE PUERTO 17 B SEVILLA 41020"
            />
          </div>
        </div>
      </div>
    </div>
  </section>


</MainLayout>
