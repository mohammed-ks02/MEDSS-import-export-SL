---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/sections/Hero.astro';
import FeaturedProducts from '../components/sections/FeaturedProducts.astro';
import { withBase } from '../utils/basePath';
---

<MainLayout 
  title="MED SS IMPORT & EXPORT - Spanish Fresh Produce" 
  description="MED SS IMPORT & EXPORT: Professional Spanish fresh produce export company. From Sevilla and Barcelona, we connect Spanish agricultural excellence with global markets, ensuring quality and reliability."
>
  <Hero />
  
  <!-- Product Showcase Video -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Fresh Lemons - Premium Quality</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">See our premium Spanish lemons in action - from harvest to delivery, ensuring the highest quality for our global partners.</p>
      </div>
      <div class="max-w-4xl mx-auto">
        <video 
          controls 
          class="w-full rounded-2xl shadow-2xl"
          poster={withBase('/IMG-20250701-WA0047.jpg')}
        >
          <source src={withBase('/VID-20250701-WA0055.mp4')} type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
    </div>
  </section>
  
  <FeaturedProducts />
</MainLayout>
