---
import MainLayout from '../../layouts/MainLayout.astro';
// Removed 3D imports
---

<style>
  .jump {
    display: inline-block;
    animation: jump 1s infinite alternate cubic-bezier(.5,1.8,.5,1);
  }
  @keyframes jump {
    0% { transform: translateY(0); }
    100% { transform: translateY(-20px); }
  }
  .fish-jump {
    display: inline-block;
    animation: fish-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
  }
  @keyframes fish-jump {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    60% { filter: brightness(1.1); }
    100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
  }
.icon-bg {
  background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
  border-radius: 9999px;
  padding: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  margin: 0.25rem;
}
.icon-jump {
  display: inline-block;
  animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
  transition: filter 0.2s, transform 0.2s;
  filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
}
@keyframes icon-jump {
  0% { transform: translateY(0) scale(1); filter: brightness(1); }
  60% { filter: brightness(1.1); }
  100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
}
</style>

<MainLayout 
  title="Products - Global road" 
  description="Explore our comprehensive range of fresh fruits, vegetables, and seafood available for global import-export trade with Global road."
>
